<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">UsefulItem一覧</p>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>ユーザーID</th>
            <th>ユーザー名</th>
            <th>タイトル</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.user_id %></td>
              <td><%= link_to admin_user_path(item.user_id) do %><%= item.user_name %><% end %></td>
              <td><%= link_to admin_item_path(lifehack.id) do %><%= item.title %><% end %></td>
              <td></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
