<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">ユーザー一覧</p>
    </div>
  </div>
  
  <div class="row my-4">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>ユーザーID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to admin_user_path(user.id) do %><%= user.user_name %><% end %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_deleted == false %>
                  <p class="text-success"><string>有効</string></p>
                <% else %>
                  <p class="text-muted"><string>退会</string></p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>