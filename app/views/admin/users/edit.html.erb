<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <h2>ユーザー情報編集</h2>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <th>ユーザーネーム</th>
            <td><%= f.text_field :user_name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>
              <%= f.radio_button :is_deleted, "false" %>
              <%= f.label :is_deleted_false, "有効" %>
              <%= f.radio_button :is_deleted, "true" %>
              <%= f.label :is_deleted_true, "退会" %>
            </td>
          </tr>
          <tr>
            <td><%= f.submit '変更を保存', class:'btn btn-sm btn-success' %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
