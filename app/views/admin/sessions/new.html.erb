<div class="container">
  <div class="row my-4">
    <div class="col-3"></div>
    <div class="col-7">
      <div class="row my-4">
        <h2>Log in</h2>
      </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row my-4">
            <div class="field  col-md-4">
              <%= f.label :email, "メールアドレス" %>
            </div>
            <div class="field col-md-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="row my-4">
            <div class="field col-md-4 text-nowrap">
              <%= f.label :password, "パスワード(6文字以上)" %>
            </div>
            <div class="field col-md-8">
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>

          <div class="row my-4">
            <div class="col-md-4"></div>
            <div class="col-md-8">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="row my-4">
            <div class="col-md-4"></div>
            <div class="col-md-4">
              <div class="actions">
                <%= f.submit "Log in" %>
              </div>
            </div>
          </div>
        <% end %>

        <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
