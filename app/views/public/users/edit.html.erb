<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <h2>ユーザー情報編集</h2>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <%= form_with model: @user, url: user_path(current_user.id), method: :patch do |f| %>
        <table class="table table-borderless">
          <tr>
            <th>ユーザーネーム</th>
            <td><%= f.text_field :user_name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit '編集内容を保存', class:'btn btn-sm btn-success' %></td>
            <td><%= link_to "退会する", users_unsubscribe_path, class:'btn btn-sm btn-danger' %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
