<div class="container">
  <div class="row my-4">
    <div class="col-md-3">
      <p class="bg-secondary">ユーザー情報編集</p>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-8">
      <%= form_with model: @user, url: user_path(current_user.id), method: :patch do |f| %>
        <div class="row">
          <div class="col-md-3">
            <label>ユーザーネーム</label>
          </div>
          <div class="col-md-9 d-inline-flex">
            <%= f.text_field :user_name %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            <label>メールアドレス</label>
          </div>
          <div class="col-md-9">
            <%= f.text_field :email %>
          </div>
        </div>

        <div class="d-inline-flex">
          <div class="mx-4">
            <%= f.submit '編集内容を保存', class:'btn btn-sm btn-success' %>
          </div>
          <div class="mx-4">
            <%= link_to "退会する", users_unsubscribe_path, class:'btn btn-sm btn-danger' %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
