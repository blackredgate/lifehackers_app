<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">LifeHack投稿</p>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-3"></div>
      <div class="col-md-6">
        <%= form_with model: @lifehack, url: '/lifehacks', method: :post do |f| %>
          <table class="table table-borderless">
            <tr>
              <th>画像</th>
              <td><%= f.file_field :image, accept: "image/*" %></td>
            </tr>
             <tr>
              <th>タイトル</th>
              <td><%= f.text_field :title, size: "50" %></td>
            </tr>
            <tr>
              <th>本文</th>
              <td><%= f.text_area :body, size: "50x10" %></td>
            </tr>
            <tr>
              <%= f.fields_for :lifehack_tags do |tag| %>
                <td>タグ</td>
                <td><%= tag.text_field :ltag_name, size: "40" %></td>
              <% end %>
            </tr>
            <tr>
               <td><%= f.submit '投稿する！', class:'btn btn-sm btn-success' %></td>
            </tr>
          </table>
        <% end %>
      </div>
  </div>
</div>
