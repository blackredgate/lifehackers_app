<div class="container">
  <div class="row my-3">
    
    <%= render partial: 'c&f', locals: { comment: @comment, favorite: @favorite } %>

    <div class="col-5">
      <div class="row my-3">
        <%= image_tag @lifehack.get_image(400, 400) %>
      </div>
      <div class="row my-3">
        <% @comments.each do |comment| %>
          <%= comment.comment %>
        <% end %>
      </div>
    </div>

    <div class="col-4">
      <%= @lifehack.title %><br>
      <%= @lifehack.body %>
    </div>
  </div>
</div>
