<div class="container">
  <div class="row my-3">
    
    <%= render partial: 'c&f', locals: { comment: @comment, favorite: @favorite } %>

    <div class="col-5">
      <div class="row my-3">
        <div  class="center-block">
          <%= image_tag @lifehack.get_image(400, 400) %>
        </div>
      </div>
      <div class="row my-3">
        <table class="table">
          <tbody>
            <% @comments.each do |comment| %>
              <tr>
                <td><%= comment.comment %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="col-4">
      <div  class="center-block">
        <h4><%= @lifehack.title %></h4>
      </div>
      <%= @lifehack.body %>
    </div>
  </div>
</div>
