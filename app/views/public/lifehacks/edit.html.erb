<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">商品編集</p>
    </div>
  </div>
  
  <div class="row my-4">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <%= form_with model: @lifehack, url:lifehack_path(@lifehack.id), method: :patch do |f| %>
        <div class="row-my-1 d-inline-flex">
          <div class="col-md-4 text-nowrap">
            <label>画像</label>
          </div>
          <div class="col-md-8">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
          
        <div class="row-my-1 d-inline-flex">
          <div class="col-md-4 text-nowrap">
            <label>タイトル</label>
          </div>
          <div class="col-md-8">
            <%= f.text_field :title %>
          </div>
        </div>
          
        <div class="row-my-1 d-inline-flex">
          <div class="col-md-4 text-nowrap">
            <label>本文</label>
          </div>
          <div class="col-md-8">
            <%= f.text_area :body %>
          </div>
        </div>
          
        <div class="center-block">
          <%= f.submit '変更を保存', class:'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
