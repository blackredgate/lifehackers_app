<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <h2>編集</h2>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <%= form_with model: @lifehack, url: lifehack_path(@lifehack.id), method: :patch do |f| %>
        <div class="row my-4">
          <div class="col-md-4">
            <p>画像</p>
          </div>
          <div class="field col-md-8">
            <%= f.file_field :image, accept: "image/*" %>
          </div>
        </div>
        
        <div class="row my-4">
          <div class="col-md-4">
            <p>タイトル</p>
          </div>
          <div class="field col-md-8">
            <%= f.text_field :title, size: "50" %>
          </div>
        </div>
        
        <div class="row my-4">
          <div class="col-md-4">
            <p>本文</p>
          </div>
          <div class="field col-md-8">
            <%= f.text_area :body, size: "50x10" %>
          </div>
        </div>
        
        <%= f.fields_for :lifehack_tags do |tag| %>
          <div class="row my-4">
            <div class="col-md-4">
              <p>タグ</p>
            </div>
            <div class="field col-md-8">
              <%= tag.text_field :ltag_name, size: "40" %>
            </div>
          </div>
        <% end %>
        
        <div class="row my-4">
          <div class="col-md-4"></div>
          <div class="field col-md-6">
            <%= f.submit '保存する！', class:'btn btn-sm btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
