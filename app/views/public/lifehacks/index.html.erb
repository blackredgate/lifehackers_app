<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p class="text-center bg-secondary">商品一覧</p>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-2">
      <h3>
        <%= link_to new_admin_item_path, class: 'text-dark' do %>
          +
        <% end %>
      </h3>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-10">
     <div class="card-list-container py-5">
      <% lifehacks.each do |lifehack| %>
      <div class="card w-50 mx-auto mt-4 shadow-lg">
        <%= link_to lifehack_path(lifehack.id) do %>
          <%= image_tag post_image.get_image, class:"card-img-top"; %>
        <% end %>
        
        <div class="card-body">
          <div class="row">
            <div class="col-10">
              <p class="card-title">
                <%= link_to(lifehack_path(lifehack.id), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= lifehack.title %></span></strong>
                <% end %>
              </p>
              <p class="card-text">説明：<%= lifehack.body %></p>
              <span><i class="fas fa-user"></i> By <%= lifehack.user.user_name %></span>
            </div>
          </div>
        </div>
      </div>
      <% end %>

    </div>
  </div>
</div>
