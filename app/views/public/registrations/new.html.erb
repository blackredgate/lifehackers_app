<div class="container">
  <div class="row my-4">
    <div class="col-3"></div>
    <div class="col-7">
      <div class="row my-4">
        <h2>Welcome to New LifeHacker</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <div class="row my-3">
          <div class="field col-md-4">
            <%= f.label :user_name, "ユーザーネーム" %>
          </div>
          <div class="field col-md-8">
            <%= f.text_field :user_name %>
            <p>ユーザーネームは他ユーザーにも表示される名前です</p>
          </div>
        </div>
        
        <div class="row my-3">
          <div class="field col-md-4">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="field col-md-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
        
        <div class="row my-3">
          <div class="field col-md-4 text-nowrap">
            <%= f.label :password, "パスワード(6文字以上)" %>
          </div>
          <div class="field col-md-8">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </div>
        
        <div class="row my-3">
          <div class="field col-md-4 text-nowrap">
            <%= f.label :password_confirmation, "パスワード確認" %>
          </div>
          <div class="field col-md-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
        
        <div class="row my-3">
          <div class="col-md-4"></div>
          <div class="col-md-8">
            <div class="actions">
              <%= f.submit "Sign Up", class:'btn btn-primary' %>
            </div>
          </div>
        </div>
        
        <div class="row my-3">
          <div class="field col-md-4 text-nowrap">
            <p>既に登録済みの方は→</p>
          </div>
          <div class="col-md-8">
            <%= link_to "To Login", new_user_session_path, class: 'btn btn-outline-primary' %>
          </div>
        </div>
        
        <div class="row my-3">
          <div class="field col-md-4 text-nowrap">
            <p>お試し⇒</p>
          </div>
          <div class="col-md-8">
            <%= link_to 'Guest Login', users_guest_sign_in_path, method: :post, class: 'btn btn-outline-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
