<div class="container">
  <div class="row my-4">
    <div class="col-3"></div>
    <div class="col-7">
      <div class="row my-4">
        <h2>Welcome to New LifeHacker</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="field col-md-4">
            <%= f.label :user_name, "ユーザーネーム" %>
          </div>
          <div class="col-md-8">
            <div class="field">
              <%= f.text_field :user_name %>
            </div>
            <p>ユーザーネームは他ユーザーにも表示される名前です</p>
          </div>
        </div>

        <div class="row">
          <div class="field col-md-4">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-8">
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              <p></p>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="field col-md-4 text-nowrap">
            <%= f.label :password, "パスワード(6文字以上)" %>
          </div>
          <div class="col-md-8">
            <div class="field">
              <!--<% if @minimum_password_length %>-->
                <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
              <!--<% end %>-->
              <%= f.password_field :password, autocomplete: "new-password" %>
              <p></p>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="field col-md-4 text-nowrap">
            <%= f.label :password_confirmation, "パスワード確認" %>
          </div>
          <div class="col-md-8">
            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              <p></p>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-3">
            <div class="actions">
              <%= f.submit "Sign Up", class:'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="row-my-6">
        <div class="col-md-4"></div>
          <div class="col-md-8">
            <p> </p>
            <table>
              <tr></tr>
              <tr>
                <td>既に登録済みの方はこちら</td>
                <td>　　　　　　</td>
                <td><%= link_to "To Login", new_user_session_path, class: 'btn btn-outline-primary' %></td>
              </tr>
            </table>
          </div>
      </div>
    </div>
  </div>
</div>
