<div class="card-list-container py-5">
  <div class="row">
    <div class="col-md-9"></div>
    <div class="col-md-2">
      <h1>
        <%= link_to new_item_path, class: 'text-dark' do %>
          +
        <% end %>
      </h1>
    </div>
  </div>

  <% @items.each do |item| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to item_path(item.id) do %>
      <%= image_tag item.get_image(200, 200), class:"card-img-top"; %>
    <% end %>

    <div class="card-body">
      <div class="row">
        <div class="col-10">
          <p class="card-title">
            <%= link_to(item_path(item.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= item.item_title %></span></strong>
            <% end %>
          </p>
          <span><i class="fas fa-user"></i> By <%= item.user.user_name %> ï½œ </span>
        </div>
      </div>
    </div>
  </div>
  <% end %>

</div>
