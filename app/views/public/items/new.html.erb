<div class="container">
  <div class="row my-4">
    <div class="col-md-1"></div>
    <div class="col-md-6">
      <p class="text-center bg-secondary">UsefulItem投稿</p>
    </div>
  </div>

  <div class="row my-4">
    <div class="col-md-3"></div>
      <div class="col-md-6">
        <%= form_with model: @item, url: '/items', method: :post do |f| %>
          <div class="row my-3">
            <div class="col-md-4">
              <p>画像</p>
            </div>
            <div class="field col-md-8">
              <%= f.file_field :image, accept: "image/*" %>
            </div>
          </div>
          
          <div class="row my-3">
            <div class="col-md-4">
              <p>タイトル</p>
            </div>
            <div class="field col-md-8">
              <%= f.text_field :item_title, size: "50" %>
            </div>
          </div>
          
          <div class="row my-3">
            <div class="col-md-4">
              <p>本文</p>
            </div>
            <div class="field col-md-8">
              <%= f.text_area :item_body, size: "50x10" %>
            </div>
          </div>
          
          <%= f.fields_for :item_tags do |tag| %>
            <div class="row my-3">
              <div class="col-md-4">
                <p>タグ</p>
              </div>
              <div class="field col-md-8">
                <%= tag.text_field :itag_name, size: "40" %>
              </div>
            </div>
          <% end %>
          
          <div class="row my-3">
            <div class="col-md-4"></div>
            <div class="field col-md-8">
              <%= f.submit '投稿する！', class:'btn btn-sm btn-success' %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>
