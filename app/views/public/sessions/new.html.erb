<div class="container">
  <div class="row my-4">
    <div class="col-3"></div>
    <div class="col-7">
      <div class="row my-4">
        <h2>Log in</h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="field col-md-4">
            <%= f.label :email, "メールアドレス" %>
          </div>
          <div class="col-md-8">
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              <p></p>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="field col-md-4 text-nowrap">
            <%= f.label :password, "パスワード(6文字以上)" %>
          </div>
          <div class="col-md-8">
            <div class="field">
              <%= f.password_field :password, autocomplete: "current-password" %>
               <p></p>
            </div>
          </div>
        </div>

         <div class="row">
           <div class="col-md-4"></div>
           <div class="col-md-8">
             <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
             <% end %>
           </div>
         </div>

        <div class="row">
          <div class="col-md-4"></div>
          <div class="col-md-4">
            <div class="actions">
              <%= f.submit "Log in", class:'btn btn-primary' %>
            </div>
          </div>
        </div>
      <% end %>

      <div class="row-my-6">

      </div>

    </div>
  </div>
  <div class="row my-4">
    <div class="col-md-3"></div>
      <div class="col-md-8">
        <p> </p>
        <table>
           <tr></tr>
             <tr>
              <td>これからユーザー登録をする方はこちら</td>
              <td>　　　　</td>
              <td><%= link_to "To Signup", new_user_registration_path, class: 'btn btn-outline-primary' %></td>
            </tr>
        </table>
      </div>
  </div>
</div>
